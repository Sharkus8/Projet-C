fp = fopen(Fichierfiches.txt, "r");

while (fscanf(fp, "%d %s %s", &employe.numeroIdentification, employe.nom, employe.emailpro)!= EOF)
	{
	personnes[i++]=employe;
	}
fclose(f1);
}


